              src={`https://github.com/${integrante.usuario}.png`} 
              alt={`Foto de ${integrante.nombre}`} 
              class="w-24 h-24 mx-auto rounded-full mb-4 border-4 border-gray-300 hover:border-blue-500 transition duration-300"
            />
