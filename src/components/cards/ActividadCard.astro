---
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  author: string;
  authorUser: string;
  link: string;
}

const { title, description, imageUrl, author, authorUser, link } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-2xl flex flex-col h-full ">
  <img src={imageUrl} alt="Imagen del artículo" class="w-full h-48 object-cover" />
  
  <div class="p-6 flex flex-col flex-grow">
    <div class="flex items-center gap-3 mb-4 font-semibold text-gray-600">
      <a href={"https://github.com/" + authorUser} target="_blank" rel="noopener noreferrer">
        <img class="inline-block h-10 w-10 rounded-full ring-2 ring-white border-2 border-gray-300 hover:border-blue-500 transition duration-300" 
             src={`https://github.com/${authorUser}.png`} 
             alt={`Avatar de ${author}`} />
      </a>
      <p>{author}</p>
    </div>

    <h2 class="text-xl font-bold mb-2">{title}</h2>
    <p class="text-gray-700 flex-grow mb-4">{description}</p>

    <a href={link} class="text-blue-500 font-semibold hover:underline mt-auto">
      Ir allá
    </a>
  </div>
</article>


