---
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  link: string;
}

const { title, description, imageUrl, link } = Astro.props;
---

<div
  class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-2xl"
>
  <img
    src={imageUrl}
    alt="Imagen del artículo"
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <h2 class="text-xl font-bold mb-2">{title}</h2>
    <p class="text-gray-700 mb-4">{description}</p>
    <a href={link} class="text-blue-500 font-semibold hover:underline"
      >Ir allá</a
    >
  </div>
</div>
