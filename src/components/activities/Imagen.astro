---
export interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<figure class="flex justify-center my-6 overflow-hidden rounded-lg border-2 border-gray-500 shadow-lg aspect-video">
  <img
    src={src}
    alt={alt}
    class="w-full h-full object-cover rounded-lg"
    loading="lazy"
    decoding="async"
  />
</figure>